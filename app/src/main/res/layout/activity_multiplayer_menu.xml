<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:gravity="center_horizontal"
    android:padding="24dp" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/btnHost" android:text="Host game (Server)"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Spinner android:id="@+id/spinnerDevices"
             android:layout_width="match_parent" android:layout_height="wrap_content"
             android:layout_marginTop="16dp"/>

    <Button android:id="@+id/btnJoin" android:text="Join selected device"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
</LinearLayout>
